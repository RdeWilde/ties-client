.SidebarMessagesItem {
  align-items: center;
  display: flex;
  padding: 12px 0;

  &:hover {
    cursor: pointer;
  }

  &:not(:first-child) {
    border-top: 1px solid rgba(23, 77, 161, .43);
  }

  &Selected {
    background: #F9F9F9;

    .SidebarMessagesItemUser {
      font-weight: 600;
    }
  }
}

.SidebarMessagesItemDate {
  color: rgba(0, 0, 0, .43);
}

.SidebarMessagesItemStatus {
  align-self: flex-start;
}

.SidebarMessagesItemUser {
  flex: 1 1 auto;
}
