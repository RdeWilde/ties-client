color-secondary = rgba(0, 0, 0, .43)

.Personal
  align-items: center
  display: flex

  &Small
    .PersonalAvatar
      flex: 0 0 36px
      height: 36px
      margin-right: 12px
      width: 36px

    .PersonalCountry
      margin: 0

    .PersonalPosition
      margin: 0

.PersonalAvatar
  flex: 0 0 72px
  height: 72px
  margin-right: 16px
  width: 72px

.PersonalCountry
  color: color-secondary
  font-size: 12px
  margin-top: 4px

  &:before
    background: url(images/geo.svg)
    content: ''
    display: inline-block
    height: 8px
    margin-right: 4px
    width: 6px

.PersonalHeader
  display: flex

.PersonalInfo {
  flex: 1 1 auto;
  overflow: hidden;
}

.PersonalName
  font-size: 16px

.PersonalPosition
  color: color-secondary
  font-size: 14px
  margin-top: 4px
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

.PersonalRating {
  align-self: flex-start;
  margin-left: 16px;
}
