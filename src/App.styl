strong
  font-weight: 600

.App {
  display: flex;
  flex: 1 1 auto;
  flex-direction: column;
  max-width: 100%;
}

.AppContainer {
  display: flex;
  flex: 1 1 auto;
}

.AppContent {
  display: flex;
  flex: 1 1 auto;
  flex-direction: column;
  overflow-x: hidden;
  overflow-y: auto;
}

html
  display: flex;
  height: 100%;
  min-height: 100%;
  min-width: 100%;

body
  background: #F9F9F9
  color: color-text
  font-family: Segoe UI
  font-size: 14px
  margin: 0
  padding: 0

  -webkit-font-smoothing: subpixel-antialiased !important;
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility:    hidden;
  -ms-backface-visibility:     hidden;

body, body > div:first-child
  display: flex;
  flex: 1 1;
  overflow: hidden;

