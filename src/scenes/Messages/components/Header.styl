.MessagesHeader {
  align-items: center;
  background: #FFF;
  display: flex;
  flex: 0 0 48px;
  height: 48px;
  padding: 0 24px;
}

.MessagesHeaderContainer {
  display: flex;
}

.MessagesHeaderName {
  font-size: 16px;
  font-weight: 600;
}

.MessagesHeaderStatus {
  align-self: flex-end;
  color: rgba(0, 0, 0, .43);
  margin-left: 8px;

  &Online {
    color: #174DA1;
  }
}
