color-secondary = rgba(0, 0, 0, .43)

.UserAvatar
  flex: 0 0 72px
  height: 72px
  width: 72px

.UserCountry
  color: color-secondary
  font-size: 10px
  margin-top: 6px

  &:before
    background: url(images/geo.svg)
    height: 8px
    width: 6px

.UserHeader
  display: flex

.UserInfo
  flex: 1 1 auto
  margin-left: 16px

.UserName
  font-size: 18px

.UserPosition
  color: color-secondary
  font-size: 12px
  margin-top: 2px

.UserTags
  display: flex
  flex-wrap: wrap
  margin-top: 12px
