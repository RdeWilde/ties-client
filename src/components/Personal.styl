color-secondary = rgba(0, 0, 0, .43)

.Personal
  display: flex

.PersonalAvatar
  flex: 0 0 72px
  height: 72px
  margin-right: 16px
  width: 72px

.PersonalCountry
  color: color-secondary
  font-size: 12px
  margin-top: 4px

  &:before
    background: url(images/geo.svg)
    content: ''
    display: inline-block
    height: 8px
    margin-right: 4px
    width: 6px

.PersonalHeader
  display: flex

.PersonalInfo
  flex: 1 1 auto

.PersonalName
  font-size: 16px

.PersonalPosition
  color: color-secondary
  font-size: 14px
  margin-top: 4px
