color-primary = #174DA1
color-white = #FFF

.Button
  font-family: Avenir
  font-size: 12px
  font-weight: 200
  height: 26px
  margin: 0
  padding: 0 16px

.ButtonWhite
  background: transparent
  border: 1px solid color-white
  color: color-white

  &:hover
    background: color-white
    color: color-primary
    cursor: pointer

  &.ButtonSolid
    background: color-white
    color: color-primary

    &:hover
      background: transparent
      color: color-white
