.Icon {
  background-color: rgba(0, 0, 0, .87);
  display: block;
  height: 100%;
  width: 100%;

  -webkit-mask-position: center center;
  -webkit-mask-repeat: no-repeat;
  -webkit-mask-size: contain;

  &AddContact {
    -webkit-mask-image: url(images/addContact.svg);
  }

  &Contacts {
    -webkit-mask-image: url(images/contacts.svg);
  }

  &DeleteContact {
    -webkit-mask-image: url(images/deleteContact.svg);
  }

  &Invoice {
    -webkit-mask-image: url(images/invoice.svg);
  }

  &Invoices {
    -webkit-mask-image: url(images/invoices.svg);
  }

  &Location {
    -webkit-mask-image: url(images/location.svg);
  }

  &Logo {
    -webkit-mask-image: url(images/logo.svg);
  }

  &Message {
    -webkit-mask-image: url(images/message.svg);
  }

  &Messages {
    -webkit-mask-image: url(images/messages.svg);
  }

  &Search {
    -webkit-mask-image: url(images/search.svg);
  }
}
