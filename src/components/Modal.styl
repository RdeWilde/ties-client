.Modal
  align-items: center
  display: flex
  height: 100%
  justify-content: center
  left: 0
  position: fixed
  top: 0
  width: 100%
  z-index: 10

.ModalBackdrop
  background: rgba(0, 0, 0, .3)
  height: 100%
  left: 0
  position: absolute
  top: 0
  width: 100%
  z-index: 1

  &:hover
    cursor: pointer

.ModalContainer
  background: #fff
  box-shadow: 0 4px 10px rgba(0, 0, 0, .05)
  min-width: 500px
  padding: 24px
  z-index: 2

.ModalTitle
  font-size: 24px
  font-weight: 600
  margin-bottom: 20px
