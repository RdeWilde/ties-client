.FormSelect
  position: relative

.FormSelectCaret
  border-color: #C4C4C4 transparent transparent transparent
  border-style: solid
  border-width: 7px 5px 0 5px
  height: 0
  position: absolute
  right: 0
  top: 24px
  width: 0


.FormSelectControl
  border: 0
  height: 100%
  opacity: 0
  position: absolute
  top: 0
  width: 100%

  &:hover
    cursor: pointer
