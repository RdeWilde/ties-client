color-tag-background = rgba(0, 0, 0, .10)
color-tag-text = rgba(0, 0, 0, .43)
color-tag-text-hover = rgba(0, 0, 0, .87)

.Tag {
  background: color-tag-background;
  display: flex;
  height: 24px;
  white-space: nowrap;
}

.TagRemove {
  border: 0;
  display: flex;
  flex: 0 0 16px;
  height: 100%;
  justify-content: center;
  min-width: auto
  padding: 0
  width: 16px;

  &:hover {
    .TagRemoveIcon {
      background-color: rgba(0, 0, 0, .87) !important; // @todo - crutch
    }
  }
}

.TagRemoveIcon {
  background-color: rgba(0, 0, 0, .43) !important; // @todo - crutch
  height: 8px !important; // @todo - crutch
  width: 8px !important; // @todo - crutch
}

.TagTitle
  color: color-tag-text
  flex: 1 1 auto
  line-height: 24px
  padding: 0 12px
